<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android">

<!--    navbar-->
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/baseline_add_shopping_cart_25"
            android:layout_marginLeft="14dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:text="Swiggy"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#FC8019"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!--    navbar-->

<!--     search bar-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginTop="25dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="#FFFFFF"
            android:textColorHint=" #808080"
            android:hint="search for dishes and restaurants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#FC8019"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>
<!--    search bar-->

<!--    fetaured dishes scroll-->
    <LinearLayout
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Featured Dishes"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                     android:layout_marginLeft="22dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/burger"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <ImageView
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/choru"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/dosa"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <ImageView
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/chicken"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <ImageView
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/food1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <ImageView
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/icecream"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <ImageView
                    android:layout_marginLeft="39dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/chicken"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!--    fetaured dishes scroll-->

<!--        three buttons-->

         <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <androidx.appcompat.widget.AppCompatButton
                 android:layout_width="100dp"
                 android:layout_height="40dp"
                 android:layout_marginLeft="16dp"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/roundbtn"
                 android:text="Pizza"
                 android:textColor="#FFFFFF" />

             <androidx.appcompat.widget.AppCompatButton

                 android:layout_width="100dp"
                 android:layout_height="40dp"
                 android:layout_marginLeft="16dp"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/roundbtn"
                 android:text="Burgers"
                 android:textColor="#FFFFFF" />

             <androidx.appcompat.widget.AppCompatButton
                 android:layout_width="100dp"
                 android:layout_height="40dp"
                 android:layout_marginLeft="16dp"
                 android:layout_marginTop="10dp"
                 android:background="@drawable/roundbtn"
                 android:text="Salads"
                 android:textColor="#FFFFFF" />

         </LinearLayout>
<!--three buttons-->

<!--        popular dishes-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Popular Dishes"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ScrollView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="210sp">

                 <LinearLayout
                     android:layout_marginTop="20dp"
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                     <ImageView
                         android:layout_gravity="center"
                         android:layout_marginTop="30dp"
                         android:background="@drawable/food1"
                         android:layout_width="150dp"
                         android:layout_height="150dp"/>

                     <ImageView
                         android:layout_gravity="center"
                         android:layout_marginTop="30dp"
                         android:background="@drawable/burger"
                         android:layout_width="150dp"
                         android:layout_height="150dp"/>

                     <ImageView
                         android:layout_gravity="center"
                         android:layout_marginTop="30dp"
                         android:background="@drawable/food2"
                         android:layout_width="150dp"
                         android:layout_height="150dp"/>
                     <ImageView
                         android:layout_gravity="center"
                         android:layout_marginTop="30dp"
                         android:background="@drawable/salad"
                         android:layout_width="150dp"
                         android:layout_height="150dp"/>
                     <ImageView
                         android:layout_gravity="center"
                         android:layout_marginTop="30dp"
                         android:background="@drawable/pizza"
                         android:layout_width="150dp"
                         android:layout_height="150dp"/>
                     <ImageView
                         android:layout_gravity="center"
                         android:layout_marginTop="30dp"
                         android:background="@drawable/icecream"
                         android:layout_width="150dp"
                         android:layout_height="150dp"/>


                 </LinearLayout>
            </ScrollView>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>